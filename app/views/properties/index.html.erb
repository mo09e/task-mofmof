<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table class="toptable">
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td id="name"><%= property.name %></td>
        <td id="rent"><%= property.rent %>円</td>
        <td id="address"><%= property.address %></td>
        <td id="age"><%= property.age %>年</td>
        <td id="remarks"><%= property.remarks %></td>
        <td><%= link_to '閲覧', property %></td>
        <td><%= link_to '編集', edit_property_path(property) %></td>
        <td><%= link_to '削除', property, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

